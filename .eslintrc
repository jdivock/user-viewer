{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 120, 2],
    "import/no-named-as-default": 0,
    "object-curly-spacing" : [0, "always"],
    "react/jsx-filename-extension": 0,
    "jsx-a11y/label-has-for": 0,
  }
}
